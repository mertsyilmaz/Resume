@model Project

@{
    ViewData["Title"] = "Details";
}

<div class="card shadow mb-12">
    <div class="card-header py-3">
        <div class="row m-0 p-0">
            <div class="col-6 m-0 p-0">
                <h6 class="m-0 font-weight-bold text-primary">Project Details</h6>
            </div>
            <div class="col-6 m-0 p-0 float-right">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-circle-split btn-sm float-right">
                    <span class="icon ">
                        <i class="fas fa-plus"></i>
                    </span>
                    <span class="text">Edit Project</span>
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Name" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Name" class="form-control" disabled />
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Description" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Description" class="form-control" disabled />
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Date" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Date" class="form-control" disabled />
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Technologies" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <select multiple asp-items="ViewBag.Technologies" class="custom-select" disabled></select>
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Categories" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <select multiple asp-items="ViewBag.Categories" class="custom-select" disabled></select>
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Images" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                @foreach (var image in ViewBag.Images)
                {
                    <img src="~/images/@image.ImageName" asp-append-version="true" width="200" height="200" />
                }
            </dd>
        </dl>
        <div class="form-group">
            <a asp-action="Index" class="float-left">
                <span class="icon ">
                    <i class="fas fa-arrow-alt-circle-left"></i>
                    Go back to list
                </span>
            </a>
        </div>
    </div>
</div>
