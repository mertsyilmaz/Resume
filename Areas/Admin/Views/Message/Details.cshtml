@model Message

@{
    ViewData["Title"] = "Details";
}

<div class="card shadow mb-12">
    <div class="card-header py-3">
        <div class="row m-0 p-0">
            <div class="col-6 m-0 p-0">
                <h6 class="m-0 font-weight-bold text-primary">Message Details</h6>
            </div>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="FullName" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="FullName" class="form-control" disabled />
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Email" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Email" class="form-control" disabled />
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Subject" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Subject" class="form-control" disabled />
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Msg" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <textarea asp-for="Msg" class="form-control" rows="7" disabled></textarea>
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Status" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Status" class="form-control" disabled />
            </dd>
        </dl>
        <div class="form-group">
            <a asp-action="Index" class="float-left">
                <span class="icon ">
                    <i class="fas fa-arrow-alt-circle-left"></i>
                    Go back to list
                </span>
            </a>
        </div>
    </div>
</div>
