@model EditRoleViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card shadow mb-12">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Edit Role</h6>
    </div>
    <div class="card-body">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" placeholder="Enter Category Name..." />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="text-dark">Users in this role</h5>
                </div>
                <div class="card-body">
                    @if(Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h6 class="card-title">@user</h6>
                        }
                    }
                    else
                    {
                <h6 class="card-title">None at the moment</h6>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-RoleId="@Model.Id" class="btn btn-primary">Add or Remove Users</a>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="ListRoles" class="float-left">
                    <span class="icon ">
                        <i class="fas fa-arrow-alt-circle-left"></i>
                        Go back to list
                    </span>
                </a>
                <input type="submit" value="Update" class="btn btn-success float-right" />
            </div>
        </form>
    </div>
</div>